<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<DialogPane stylesheets="@dark-theme.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox alignment="TOP_CENTER">
         <children>
            <Label text="Existing Exercises" textAlignment="CENTER" VBox.vgrow="NEVER">
               <padding>
                  <Insets bottom="10.0" top="5.0" />
               </padding>
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <TableView fx:id="exerciseTable" prefHeight="350.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="nameCol" prefWidth="192.0" style="-fx-alignment: CENTER;" text="Name" />
                <TableColumn fx:id="unitCol" prefWidth="131.0" style="-fx-alignment: CENTER;" text="Unit" />
                  <TableColumn fx:id="closeCol" editable="false" prefWidth="30.0" resizable="false" sortable="false" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <Separator prefWidth="200.0" VBox.vgrow="NEVER">
               <padding>
                  <Insets bottom="10.0" top="20.0" />
               </padding>
            </Separator>
            <AnchorPane VBox.vgrow="NEVER">
               <children>
                  <TextField fx:id="nameTextField" layoutX="10.0" layoutY="56.0" prefHeight="26.0" prefWidth="147.0" />
                  <ChoiceBox fx:id="unitChoiceBox" layoutX="174.0" layoutY="56.0" prefHeight="26.0" prefWidth="108.0" />
                  <Label layoutX="39.0" layoutY="36.0" text="Exercise Name" />
                  <Label layoutX="189.0" layoutY="36.0" text="Exercise Unit" />
                  <Label layoutX="104.0" layoutY="8.0" text="Create New Exercise" textAlignment="CENTER">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <Button fx:id="addButton" layoutX="302.0" layoutY="55.0" mnemonicParsing="false" onAction="#onAddButtonAction" text="Add" />
               </children>
               <padding>
                  <Insets right="10.0" />
               </padding>
            </AnchorPane>
            <Separator prefWidth="200.0">
               <padding>
                  <Insets top="10.0" />
               </padding>
            </Separator>
         </children>
      </VBox>
   </content>
   <buttonTypes>
      <ButtonType fx:constant="OK" />
      <ButtonType fx:constant="CANCEL" />
   </buttonTypes>
   <header>
      <AnchorPane />
   </header>
</DialogPane>
